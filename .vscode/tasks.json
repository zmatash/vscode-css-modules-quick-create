{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc-watch",
                {
                    "owner": "esbuild-watch",
                    "pattern": [
                        {
                            "regexp": "^âœ˜ \\[ERROR\\] (.*)$",
                            "message": 1
                        },
                        {
                            "regexp": "^\\s+([^:]+):(\\d+):(\\d+):$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^\\[watch\\] build started",
                        "endsPattern": "^\\[watch\\] build finished"
                    }
                }
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "group": "watchers"
            }
        }
    ]
}